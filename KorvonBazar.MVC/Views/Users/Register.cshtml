@model KorvonBazar.ViewModels.Request.RegisterUserAndShop
@{

    Layout = "Layouts/_BlankLayout";

    ViewData["Title"] = "Register Basic - Pages";
}
@section VendorStyles{
    <link rel="stylesheet" href="~/vendor/libs/bootstrap-select/bootstrap-select.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/select2/select2.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/typeahead-js/typeahead.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/tagify/tagify.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/umd/styles/index.min.css" />
}

@section VendorScripts{
    <script src="~/vendor/libs/select2/select2.dist.js"></script>
    <script src="~/vendor/libs/bootstrap-select/bootstrap-select.dist.js"></script>
    <script src="~/vendor/libs/moment/moment.dist.js"></script>
    <script src="~/vendor/libs/flatpickr/flatpickr.dist.js"></script>
    <script src="~/vendor/libs/typeahead-js/typeahead.dist.js"></script>
    <script src="~/vendor/libs/tagify/tagify.dist.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/umd/bundle/popular.min.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/umd/plugin-bootstrap5/index.min.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/umd/plugin-auto-focus/index.min.js"></script>
}

@section PageScripts {
    <script src="~/js/form-validation.dist.js"></script>
}

@* ************** Content ************** *@

<div class="authentication-wrapper authentication-cover">
    <div class="authentication-inner row m-0">

        <!-- /Left Text -->
        <div class="d-none d-lg-flex col-lg-5 col-xl-4 align-items-center p-5">
            <div class="w-100 d-flex justify-content-center">
                <img src="~/img/illustrations/girl-with-laptop-light.png" class="img-fluid" alt="Login image" width="700" data-app-dark-img="illustrations/girl-with-laptop-dark.png" data-app-light-img="illustrations/girl-with-laptop-light.png">
            </div>
        </div>

        <!-- Register -->
        <div class="d-flex col-12 col-lg-7 col-xl-8 align-items-center authentication-bg p-sm-5 p-4">
            <div class="w-px-800 mx-auto">
                <!-- Logo -->
                <div class="app-brand mb-5">
                    <a href="/" class="app-brand-link gap-2">
                        <span class="app-brand-logo demo">@await Html.PartialAsync("~/Views/Shared/_Partials/_Macros.cshtml")</span>
                        <span class="app-brand-text demo text-body fw-bold">@TempData.Peek("appName")</span>
                    </a>
                </div>
                <!-- /Logo -->
                <h4 class="mb-2">Create a account 🚀</h4>
                <p class="mb-4">Make your app management easy and fun!</p>

                <form class="row g-3" method="post" asp-antiforgery="true" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <!-- Account Details -->

                    <div class="col-12">
                        <h6>1. Account Details</h6>
                        <hr class="mt-0" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="User.FirstName">First Name</label>
                        <input type="text" asp-for="User.FirstName" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="User.LastName">Last Name</label>
                        <input type="text" asp-for="User.LastName" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label" asp-for="User.Email">Email</label>
                        <input class="form-control" asp-for="User.Email" placeholder="john.doe" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>

                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="User.PhoneNumber">Phone Number</label>
                        <input class="form-control" asp-for="User.PhoneNumber" placeholder="john.doe" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="form-password-toggle">
                            <label class="form-label" asp-for="User.Password">Password</label>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                            <div class="input-group input-group-merge">
                                <input class="form-control" asp-for="User.Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="multicol-password2" />
                                <span class="input-group-text cursor-pointer" id="multicol-password2"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-password-toggle">
                            <label class="form-label" asp-for="User.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
                            <div class="input-group input-group-merge">
                                <input class="form-control" asp-for="User.ConfirmPassword" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="multicol-confirm-password2" />
                                <span class="input-group-text cursor-pointer" id="multicol-confirm-password2"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                    </div>

                    <!-- Personal Info -->

                    <div class="col-12">
                        <h6 class="mt-2">2. Shop Info</h6>
                        <hr class="mt-0" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Shop.ShopName">Shop Name</label>
                        <input class="form-control" asp-for="Shop.ShopName" placeholder="john.doe" />
                        <span asp-validation-for="Shop.ShopName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Shop.ShopPicture" class="form-label">Bussines Logo/Shop Photo</label>
                        <input class="form-control" asp-for="Shop.ShopPicture">
                        <span asp-validation-for="Shop.ShopPicture" class="text-danger"></span>

                    </div>
                    <div class="col-md-6">
                        <label asp-for="Shop.Address" class="form-label">Street Address</label>
                        <input class="form-control" asp-for="Shop.Address">
                        <span asp-validation-for="Shop.Address" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Shop.CityName">City</label>
                        <span asp-validation-for="Shop.CityName" class="text-danger"></span>

                        <select asp-for="Shop.CityName" class="form-select select2" data-allow-clear="true">
                            <option value="">Select</option>
                            <option value="Australia">Australia</option>
                            <option value="Bangladesh">Bangladesh</option>
                            <option value="Belarus">Belarus</option>
                            <option value="Brazil">Brazil</option>
                            <option value="Canada">Canada</option>
                            <option value="China">China</option>
                            <option value="France">France</option>
                            <option value="Germany">Germany</option>
                            <option value="India">India</option>
                            <option value="Indonesia">Indonesia</option>
                            <option value="Israel">Israel</option>
                            <option value="Italy">Italy</option>
                            <option value="Japan">Japan</option>
                            <option value="Korea">Korea, Republic of</option>
                            <option value="Mexico">Mexico</option>
                            <option value="Philippines">Philippines</option>
                            <option value="Russia">Russian Federation</option>
                            <option value="South Africa">South Africa</option>
                            <option value="Thailand">Thailand</option>
                            <option value="Turkey">Turkey</option>
                            <option value="Ukraine">Ukraine</option>
                            <option value="United Arab Emirates">United Arab Emirates</option>
                            <option value="United Kingdom">United Kingdom</option>
                            <option value="United States">United States</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label" asp-for="Shop.LineOfBussiness">Lines Of bussines</label>
                        <span asp-validation-for="Shop.LineOfBussiness" class="text-danger"></span>
                        <select class="selectpicker hobbies-select w-100" asp-for="Shop.LineOfBussiness" data-style="btn-default" data-icon-base="bx" data-tick-icon="bx-check text-white" multiple>
                            <option value="Shoes">Shoes</option>
                            <option>Shirts</option>
                            <option>Books</option>
                            <option>Clothes</option>
                            <option>Non-Clothes</option>
                            <option>Etcs</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label" asp-for="Shop.BazarName">Bazar list</label>
                        <span asp-validation-for="Shop.BazarName" class="text-danger"></span>
                        <select asp-for="Shop.BazarName" class="form-select select2" data-allow-clear="true">
                            <option value="">Select</option>
                            <option value="Australia">Korvon</option>
                            <option value="Bangladesh">Saxovalt</option>
                            <option value="Belarus">other</option>
                            <option value="Brazil">Brazil</option>
                            <option value="Canada">Canada</option>
                            <option value="China">China</option>
                            <option value="France">France</option>
                            <option value="Germany">Germany</option>
                            <option value="India">India</option>
                            <option value="Indonesia">Indonesia</option>
                            <option value="Israel">Israel</option>
                            <option value="Italy">Italy</option>
                            <option value="Japan">Japan</option>
                            <option value="Korea">Korea, Republic of</option>
                            <option value="Mexico">Mexico</option>
                            <option value="Philippines">Philippines</option>
                            <option value="Russia">Russian Federation</option>
                            <option value="South Africa">South Africa</option>
                            <option value="Thailand">Thailand</option>
                            <option value="Turkey">Turkey</option>
                            <option value="Ukraine">Ukraine</option>
                            <option value="United Arab Emirates">United Arab Emirates</option>
                            <option value="United Kingdom">United Kingdom</option>
                            <option value="United States">United States</option>
                        </select>
                    </div>

                    @*<div class="col-12">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="formValidationCheckbox" name="formValidationCheckbox" />
                            <label class="form-check-label" for="formValidationCheckbox">Agree to our terms and conditions</label>
                        </div>
                    </div>*@
                    <div class="col-12">
                        <button type="submit" name="submitButton" class="btn btn-primary d-grid w-50">Submit</button>
                    </div>
                </form>
                <div class="divider my-2">
                    <div class="divider-text">or</div>
                </div>
                <p class="text-center">
                    <span>Already have an account?</span>
                    <a asp-area="" asp-controller="Users" asp-action="Login">
                        <span>Sign in instead</span>
                    </a>
                </p>
            </div>
        </div>
        <!-- Register Card -->
    </div>
</div>
